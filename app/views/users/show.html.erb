<br /><br />
<div class="col-10 offset-1"> 
  <div class="row">
    <div class="col-4">
        <%= image_tag 'user.png', class: 'avatar' %>
    </div>

    <div class="col-8 user-data">
      <h2><%= @user.email %></h2>
      <h7>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h7>
      <br /><br /> 
      <h6><%= @user.comments.count %> total comments </h6>
      <h6><%= @user.comments.where(rating: '5_stars').count %> total reviews</h6>
    </div>
  </div>
  <div class="clear"></div>
</div>

<br />

<div class="booyah-box col-10 offset-1">
  <h2 class="text-center">My Comments</h2>
  <br />
    <div class="row">
      <% @user.comments.each do |comment| %>
        <div class="col-12 col-sm-6">
          <h4 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h4>
          <blockquote>
            <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %></b> -
            <% end %>
            <%= comment.message %>
            <small><%= comment.user.email %></small>
          </blockquote>
        </div>
      <% end %>
    </div>
</div>

<div class="clear"></div>
<br />

<div class="booyah-box col-10 offset-1">
  <h2 class="text-center">My Places</h2>
  <br />
    <% @user.places.each do |place| %>
         <div class="booyah-box col-10 offset-1">
          <h4><%= link_to place.name, place_path(place) %></h4>
          <i><%= place.address %></i><br /><br />
          <p><%= place.description %></p><br />
         
          <% if place.user.present? %>
            <small><%= place.user.email %></small>
          <% end %>

        <% if place.comments.present? %>
          <div class="col-12">
            <blockquote>
              <% if place.comments.last.humanized_rating.present? %>
                <b><%= place.comments.last.humanized_rating %></b> -
                <% end %>
                <%= place.comments.last.message %>
                <small><%= place.comments.last.user.email %></small>
            </blockquote>
          </div>
        <% end %>
      </div>
    <% end %>
</div>